package netwalk;

import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;

/**
 *
 * @author lvulin
 */
public class Plateau {
    private Tuile plateau[][];
    private int dimensionL;
    private int dimensionC;
    private int xServeur;
    private int yServeur;
    
    public Plateau(String nomFichier){
        //LIRE FICHIER
        try {
            BufferedReader fichier = new BufferedReader(new FileReader(nomFichier));
            String ligne;
            ligne = fichier.readLine(); //ton nb de lignes
            this.dimensionL = Integer.parseInt("ligne");
            
            ligne = fichier.readLine(); //ton nb de colonnes
            this.dimensionC = Integer.parseInt("ligne");
            
            ligne = fichier.readLine();//ton nb de colonnes
            
            String champs[] = ligne.split(",");
            int source1=champs[0];
            int source2= champs[1]
            this.dimensionC = Integer.parseInt("ligne");
            
            while (fichier.ready()) {
                
                ligne = fichier.readLine();
                System.out.println(ligne); //TODO ICI
            }
            fichier.close();
        } catch (IOException e) {
            e.printStackTrace();
        }
        
        //INIT PLATEAU
        this.plateau = new Tuile[this.dimensionL][this.dimensionC];
    }

