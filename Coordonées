package netwalk;

/**
 * Représente une position (ligne, colonne) dans la grille.
 * @author lvulin
 */
public class Coordonées {
    
    private int ligne;
    private int colonne;

    /**
     * Constructeur de coordonnées.
     * @param ligne Indice de la ligne.
     * @param colonne Indice de la colonne.
     */
    public Coordonées(int ligne, int colonne) {
        this.ligne = ligne;
        this.colonne = colonne;
    }

    public int getLigne() {
        return ligne;
    }

    public void setLigne(int ligne) {
        this.ligne = ligne;
    }

    public int getColonne() {
        return colonne;
    }

    public void setColonne(int colonne) {
        this.colonne = colonne;
    }
}
