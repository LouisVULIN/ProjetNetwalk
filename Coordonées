package netwalk;

//Defini une position (ligne, colonne) sur le plateau.

public class Coordonées {
    
    private int ligne;
    private int colonne;

    public Coordonées(int ligne, int colonne) {
        this.ligne = ligne;
        this.colonne = colonne;
    }

    public int getLigne() {
        return ligne;
    }

    public void setLigne(int ligne) {
        this.ligne = ligne;
    }

    public int getColonne() {
        return colonne;
    }

    public void setColonne(int colonne) {
        this.colonne = colonne;
    }
}
