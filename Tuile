package netwalk;

import Outils.Data;

/**
 *
 * @author lvulin
 */
public class Tuile {

    private int code;

    Tuile(int code) {
        this.code = code;
    }

    public int getCode() {
        return code;
    }

    public void setCode(int code) {
        this.code = code;
    }

    public boolean isFeuille() {
        return feuille;
    }

    public void setFeuille(boolean feuille) {
        this.feuille = feuille;
    }

    public boolean isServeur() {
        return serveur;
    }

    public void setServeur(boolean serveur) {
        this.serveur = serveur;
    }

    public boolean isVisitee() {
        return visitee;
    }

    public void setVisitee(boolean visitee) {
        this.visitee = visitee;
    }
    private boolean feuille;
    private boolean serveur;
    private boolean visitee;

    public Tuile(int code, boolean feuille, boolean serveur, boolean visitee) {
        this.code = code;
        this.feuille = feuille;
        this.serveur = serveur;
        this.visitee = visitee;
    }

    public void rotationDroite() {
        this.code = this.code * 2;
        if (this.code > 15) {
            this.code = (this.code & 15) + 1;
        }
    }

    public void rotationGauche() 
    {
        this.code = this.code / 2;
        int ajout = this.code ^ 14;
        if (ajout == 1) {
            this.code = (this.code & 7) + 8;
        }
    }
    
    @Override
    public String toString(){
// Dans la classe Tuile
        return switch (this.code) {
            case 1 -> Data.asciiGraphic[1];
            case 2 -> Data.asciiGraphic[2];
            case 3 -> Data.asciiGraphic[3];
            case 4 -> Data.asciiGraphic[4];
            case 5 -> Data.asciiGraphic[5];
            case 6 -> Data.asciiGraphic[6];
            case 7 -> Data.asciiGraphic[7];
            case 8 -> Data.asciiGraphic[8];
            case 9 -> Data.asciiGraphic[9];
            case 10 -> Data.asciiGraphic[10];
            case 11 -> Data.asciiGraphic[11];
            case 12 -> Data.asciiGraphic[12];
            case 13 -> Data.asciiGraphic[13];
            case 14 -> Data.asciiGraphic[14];
            case 15 -> Data.asciiGraphic[15];
            default -> " ";
        };
    }

}

           
