    private int yServeur;
    public Netwalk(int dimensionL, int dimensionC, int xServeur, int yServeur){
        this.dimensionL = dimensionL;
        this.dimensionC = dimensionC;
        this.xServeur = xServeur;
        this.yServeur = yServeur;
    }
 public void lectureTexte(){
    try{
        BufferedReader fichier = new BufferedReader (new FileReader("MiniNetWalk.txt"));
        while (fichier.ready()) {
            String ligne;
            ligne = fichier.readlines();
            System.out.println(ligne);    
        }
        fichier.close();
    } catch (IOException e) {
        e.printStackTrace();
    }

    }
   }
